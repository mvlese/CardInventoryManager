<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="net.leseonline.cardinventorymanager.CaptureDataActivity"
    tools:showIn="@layout/activity_capture_data">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/capture_image_header"
                android:gravity="center"
                android:textSize="12pt"
                android:textStyle="bold"/>
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/first_name_hint"
                android:id="@+id/first_name_edit"/>
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/last_name_hint"
                android:id="@+id/last_name_edit"/>
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/team_name_hint"
                android:id="@+id/team_edit"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/position_hint"/>
            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/position_hint"
                android:id="@+id/position_spinner" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/condition_hint"/>
            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/condition_hint"
                android:id="@+id/condition_spinner" />
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/value_hint"
                android:inputType="numberDecimal"
                android:id="@+id/value_edit"/>
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/company_hint"
                android:id="@+id/company_edit"/>
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/year_hint"
                android:inputType="number"
                android:id="@+id/year_edit"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/capture_cancel_button"
                    android:text="@string/cancel_button"
                    android:backgroundTint="#f64848"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/capture_notes_button"
                    android:text="@string/enter_notes_button"
                    android:backgroundTint="#e3cf5d"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/capture_save_button"
                    android:text="@string/save_button"
                    android:textColor="@android:color/black"
                    android:backgroundTint="#5bb818"/>
            </LinearLayout>
<!--            <EditText
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:hint="@string/notes_hint"
                android:inputType="textMultiLine"
                android:lines="4"
                android:id="@+id/notes_edit"
                android:gravity="top|left"/> -->
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
