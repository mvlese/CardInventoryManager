<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context="com.inducesmile.androidcameraapi2.AndroidCameraApi">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_heading"
        android:padding="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:text="Capture Front"
        android:layout_alignParentTop="false"/>
    <TextureView
        android:id="@+id/texture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_heading"
        android:layout_above="@+id/camera2_linear_bottom"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/camera2_linear_bottom">
        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="3"/>
        <ImageButton
            android:id="@+id/btn_cancel_picture"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:src="@drawable/cancel"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="3"/>
        <ImageButton
            android:id="@+id/btn_take_picture"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:src="@drawable/aperature2"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="4"/>
<!--        <ImageButton
            android:id="@+id/btn_commit_picture"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:visibility="visible"
            android:src="@drawable/checkmark"/> -->
        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="3"/>
    </LinearLayout>
</RelativeLayout>