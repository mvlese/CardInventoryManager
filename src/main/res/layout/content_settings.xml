    <LinearLayout
        android:layout_below="@+id/settings_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:orientation="vertical"
        android:id="@+id/settings_layout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <Switch
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/switch_haptics"
                android:textOff="Disabled"
                android:textOn="Enabled"
                android:text="Haptics"
                android:showText="true"
                android:layout_marginEnd="40dp"
                android:switchPadding="20dp"
                android:textSize="20sp"
                android:layout_weight="3"
                android:checked="false"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <Switch
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/switch_sound"
                android:textOff="Disabled"
                android:textOn="Enabled"
                android:text="Sound"
                android:showText="true"
                android:layout_marginEnd="40dp"
                android:switchPadding="20dp"
                android:textSize="20sp"
                android:layout_weight="3"
                android:checked="false"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <Switch
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/switch_messaging"
                android:textOff="Disabled"
                android:textOn="Enabled"
                android:text="Messaging"
                android:showText="true"
                android:layout_marginEnd="40dp"
                android:switchPadding="20dp"
                android:textSize="20sp"
                android:layout_weight="3"
                android:checked="false"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_below="@id/settings_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="@string/sort_order"
        android:id="@+id/settings_sort_heading"
        android:background="#fbf9b6"
        android:textStyle="bold"
        android:textSize="20sp"/>
    <LinearLayout
        android:layout_below="@+id/settings_sort_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <Switch
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/switch_player"
                android:textOff="Disabled"
                android:textOn="Enabled"
                android:text="Player Name"
                android:showText="true"
                android:layout_marginEnd="40dp"
                android:switchPadding="20dp"
                android:textSize="20sp"
                android:layout_weight="3"
                android:checked="false"/>
            <Switch
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/switch_player_order"
                android:textOff="ASC"
                android:textOn="DESC"
                android:showText="true"
                android:textSize="20sp"
                android:layout_weight="1"
                android:checked="false"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <Switch
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/switch_team"
                android:textOff="Disabled"
                android:textOn="Enabled"
                android:text="Team Name"
                android:showText="true"
                android:layout_marginEnd="40dp"
                android:switchPadding="20dp"
                android:textSize="20sp"
                android:layout_weight="3"
                android:checked="false"/>
            <Switch
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/switch_team_order"
                android:textOff="ASC"
                android:textOn="DESC"
                android:showText="true"
                android:textSize="20sp"
                android:layout_weight="1"
                android:checked="false"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <Switch
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/switch_year2"
                android:textOff="Disabled"
                android:textOn="Enabled"
                android:text="Year"
                android:showText="true"
                android:layout_marginEnd="40dp"
                android:switchPadding="20dp"
                android:textSize="20sp"
                android:layout_weight="3"
                android:checked="false"/>
            <Switch
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/switch_year_order"
                android:textOff="ASC"
                android:textOn="DESC"
                android:showText="true"
                android:textSize="20sp"
                android:layout_weight="1"
                android:checked="false"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <Switch
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/switch_value"
                android:textOff="Disabled"
                android:textOn="Enabled"
                android:text="Value"
                android:showText="true"
                android:layout_marginEnd="40dp"
                android:switchPadding="20dp"
                android:textSize="20sp"
                android:layout_weight="3"
                android:checked="false"/>
            <Switch
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/switch_value_order"
                android:textOff="ASC"
                android:textOn="DESC"
                android:showText="true"
                android:textSize="20sp"
                android:layout_weight="1"
                android:checked="false"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <Switch
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/switch_condition"
                android:textOff="Disabled"
                android:textOn="Enabled"
                android:text="Condition"
                android:showText="true"
                android:layout_marginEnd="40dp"
                android:switchPadding="20dp"
                android:textSize="20sp"
                android:layout_weight="3"
                android:checked="false"/>
            <Switch
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/switch_condition_order"
                android:textOff="ASC"
                android:textOn="DESC"
                android:showText="true"
                android:textSize="20sp"
                android:layout_weight="1"
                android:checked="false"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <Switch
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/switch_company"
                android:textOff="Disabled"
                android:textOn="Enabled"
                android:text="Company"
                android:showText="true"
                android:layout_marginEnd="40dp"
                android:switchPadding="20dp"
                android:textSize="20sp"
                android:layout_weight="3"
                android:checked="false"/>
            <Switch
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/switch_company_order"
                android:textOff="ASC"
                android:textOn="DESC"
                android:switchPadding="10dp"
                android:textAlignment="textEnd"
                android:showText="true"
                android:textSize="20sp"
                android:layout_weight="1"
                android:checked="false"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
